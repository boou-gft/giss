            <!-- <item value="menu_6" link="#" tooltip="menu6" /> -->
            <!-- <item value="menu_7" link="#" tooltip="menu7" /> -->
        </putList>

    </definition>
    
    <!-- ALL Menu Options for the Quick Services Menu -->
    <definition name="services.menu.options" path="/template/servicesMenu.jsp">
    	<putList name="services">
            <!-- <item value="quick_1" link=""/> -->
            <!-- <item value="quick_1_1" link="#" /> -->
